/* *
    VuePress 提供了一种添加额外样式的简便方法。
*/
@font-face {
    font-family: 'iconfont';
    src: url('/.vuepress/fonts/iconfont.eot?t=1561303571282'); /* IE9 */
    src: url('/.vuepress/fonts/iconfont.eot?t=1561303571282#iefix') format('embedded-opentype'), url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'), url('/.vuepress/styles/fonts/iconfont.woff?t=1561303571282') format('woff'), url('/.vuepress/styles/fonts/iconfont.ttf?t=1561303571282') format('truetype'), url('/.vuepress/styles/fonts/iconfont.svg?t=1561303571282#iconfont') format('svg');
    /* iOS 4.1- */
}

.iconfont {
    font-family: 'iconfont' !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.iconclose:before {
    content: '\e619';
}

/*
 * 全局默认样式
 */
.content__default {
    min-height: calc(100vh - 7.2em - 190px);
}

.opacity {
    opacity: 0;
}

.hide {
    display: none;
}

h2 {
    padding-bottom: 1rem;
}

.page {
    hr:first-of-type {
        border-top-width: 5px;
    }
}

// clip-border
pre {
    position: relative;

    code::selection {
        background: transparent;
    }

    &:hover {
        .copy_btn {
            opacity: 1;
        }
    }

    .copy_btn {
        position: absolute;
        top: 0.5rem;
        right: 0.7rem;
        opacity: 0;
        z-index: 99;
        transition: 0.15s ease;
        cursor: pointer;

        &:hover {
            color: #fff;
        }
    }
}
